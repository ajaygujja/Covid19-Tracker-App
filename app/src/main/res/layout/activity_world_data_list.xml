<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/colorPrimarySurface"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="5dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/covCountryFlags"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/joker"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/WorldDataName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="China"
                android:padding="2dp"
                android:textColor="#fff"
                android:textSize="30sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >


                <TextView
                    android:id="@+id/WorldDataCases"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#DEffffff"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"
                    android:text="Cases :"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/WorldDataCasesCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#FFBA00"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"
                    android:text="78455566"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView

                    android:id="@+id/WorldDataDeath"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"
                    android:text="Deaths :"
                    android:textColor="#DEffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/WorldDataDeathCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#FA3C24"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_light"
                    android:text="78455566"
                    android:textSize="20sp" />


            </LinearLayout>



        </LinearLayout>









    </LinearLayout>


</androidx.cardview.widget.CardView>